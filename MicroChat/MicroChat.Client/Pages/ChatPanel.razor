@if (SelectedChat != null)
{
    <div class="chat-panel">
        <h2>@SelectedChat.Title</h2>
        <div class="chat-messages">
            <p>最新消息：@SelectedChat.LatestMessage</p>
            <p>时间：@SelectedChat.LastMessageTime.ToString("yyyy-MM-dd HH:mm:ss")</p>
        </div>
    </div>
}
else
{
    <div class="chat-panel-empty">
        <h3>请从左侧选择一个聊天</h3>
    </div>
}

@code {
    [Parameter]
    public dynamic? SelectedChat { get; set; }
}
